{"$schema":"https://json.schemastore.org/tsconfig.json",

	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",

		"lib": [
			"ESNext",
			"DOM.Iterable",
			"DOM",
			"ScriptHost"
		],

		"baseUrl": "./",

		"paths": {
			"Components/*": ["./src/components/*"],
			"Pages/*":      ["./src/pages/*"     ],
			"Public/*":     ["./public/*"        ],
			"Styles/*":     ["./src/styles/*"    ]
		},

		"moduleResolution": "Node"
	},

	"include": [
		"./src/**/*.astro",
		"./src/**/*.cjs",
		"./src/**/*.js",
		"./src/**/*.jsx",
		"./src/**/*.md",
		"./src/**/*.mdx",
		"./src/**/*.mjs",
		"./src/**/*.svelte",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/**/*.vue"
	],

	"exclude": [
		"node_modules"
	]

}
